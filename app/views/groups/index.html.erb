<h1>My Groups</h1>

<div class="menu">
  <%= link_to "New group", new_group_path %>
</div>

<% if @groups.any? %>
  <% @groups.each do |group| %>
    <div class="box">
      <%= link_to group.name, group_path(group) %>

      <p><%= group.description %></p>
    </div>
  <% end %>
<% else %>
  <p>You don't have any groups yet!</p>
<% end %>
