<h1>Invite people to <%= @group.name %></h1>

<div class="menu">
  <%= link_to "Â« Back to group", group_path(@group) %>
</div>

<div class="box">
  <%= form_with url: group_memberships_path(@group) do |form| %>
    <p><label>Enter the email addresses of the people you wish to invite:</label></p>

    <% 10.times do %>
      <p><input type="email" name="membership[:email_addresses][]" placeholder="Email address" /></p>
    <% end %>

    <p><%= form.submit "Send invitations" %></p>
  <% end %>
</div>
